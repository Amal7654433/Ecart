            <form action="/forgetpassword/resetpassword" onsubmit="return passwordValidate()" id="passValidate"
              method="post">
              <div class="form-group mb-4">
                <div class="inputbox"> <input type="password" id="valpassword" name="password"
                    class="form-control border-dark white-black curved mx-auto" value=""
                    placeholder="Enter the new password" style="width: 80%; letter-spacing: 0.3rem;">
                  <i class="fas fa-eye" id="eyeIcon" onclick="togglePasswordVisibility()"></i>
                </div>

                <span class="error text-center text-danger" id="valPassErr" style="margin-left: 60px;"></span>
              </div>

              <div class="form-group mb-4">
                <div class="inputbox">
                  <input type="password" id="valcPassword" name="cPassword"
                    class="form-control border-dark white-black curved mx-auto" value=""
                    placeholder="Re-enter the password" style="width: 80%; letter-spacing: 0.3rem;">
                  <i class="fas fa-eye" id="eyeIcon2" onclick="togglePasswordVisibility2()"></i>
                </div>

                <span class="error text-center text-danger" id="valcPassErr" style="margin-left: 60px;"></span>
              </div>
              <% if(typeof message!=='undefined' ){ %>
