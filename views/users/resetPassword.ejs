  <script>
    function printError(elemId, hintMsg) {
      document.getElementById(elemId).innerText = hintMsg;
    }
    function passwordValidate() {
      const password = document.getElementById('valpassword').value;
      const cpassword = document.getElementById('valcPassword').value;
      let isValid = true;
      if (password.trim() === '') {
        printError('valPassErr', '!Please enter your password');
        isValid = false;

      } else if (password.length < 3) {
        printError('valPassErr', 'Please enter a password with at least 3 characters');
        isValid = false
      } else if (!/\d/.test(password)) {
        printError('valPassErr', 'Password must include at least one number');
        isValid = false;
      }

      // Check for at least one special character
      else if (!/[!@#$%^&*()_+{}\[\]:;<>,.?~\\/-]/.test(password)) {
        printError('valPassErr', 'Password must include at least one special character');
        isValid = false;
      } else if (/\s/.test(password)) {
        printError('valPassErr', 'Password cannot contain any white spaces');
        isValid = false;
      }
      else {
        printError('valPassErr', '');
      }
      if (cpassword.trim() === '') {
        printError('valcPassErr', '!Confirm Password should not be blank');
        isValid = false;
      } else if (password !== '' && cpassword !== '' && password !== cpassword) {
        printError('valcPassErr', '!Password does not match');
        isValid = false;
      } else {
        printError('valcPassErr', '');
      }

      if (isValid) {
        return true;
      } else {
        return false;
      }
    }
  </script>
  <script>
    function togglePasswordVisibility() {
      const passwordInput = document.getElementById("valpassword");
      const eyeIcon = document.getElementById('eyeIcon');

      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.classList.remove('fa-eye');
        eyeIcon.classList.add('fa-eye-slash');
      } else {
        passwordInput.type = 'password';
        eyeIcon.classList.remove('fa-eye-slash');
        eyeIcon.classList.add('fa-eye');
      }
    }
    function togglePasswordVisibility2() {
      const passwordInput = document.getElementById("valcPassword");
      const eyeIcon = document.getElementById('eyeIcon2');

      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.classList.remove('fa-eye');
