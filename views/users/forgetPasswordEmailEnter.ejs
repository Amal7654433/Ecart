    <body>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            Forgetpassword
                        </div>
                        <div class="card-body">
                            <form action="/forgetpassword" method="post" id="emailValidate"
                                onsubmit="return validateForm()">
                                <div class="form-group" >
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-con" id="email" name="email"
                                        placeholder="Enter your email">
                                    <span id="emailError" class="text-danger"></span>
                                </div>

                                <!-- <a style="color: white ;  font-size: 10px;" href="/admin/adminDashboard"><button
                                    type="submit" class="btn btn-primary">Login</button>
                            </a> -->

                                <!-- <a type=class="btn btn-primary""submit"  class="btn btn-primary">Click me</a> -->
                                <button class="btn btn-primary" type="submit">send otp</button>


                            </form>
                        </div>
                        <% if(typeof message!=='undefined' ){ %>
                            <p class="text-danger">
                                <%= message%>
                            </p>
                            <% } %>


                    </div>
                </div>
            </div>
        </div>
        <script>
            function printError(elemId, hintMsg) {
                document.getElementById(elemId).innerText = hintMsg;
            }

            function validateForm() {
                let isValid = true
                var email = document.getElementById("email").value;
                printError("emailError", "");

                if (email.trim() === '') {
                    printError('emailError', 'Please enter your email');
                    isValid = false
                } else {
                    const emailRegex = /^\S+@\S+\.\S+$/;
                    if (!emailRegex.test(email)) {
                        printError('emailError', 'Please enter a valid email');
                        isValid = false
                    } else {
                        printError('emailError', '');
                    }

                }
                return isValid
            }

        </script>


    </body>
    
