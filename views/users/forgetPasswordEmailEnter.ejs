            color: #fff;
            padding: 10px;
            border-radius: 5px 5px 0 0;
        }

        /* Style the form */
        /* form {
    margin-top: 20px;
} */

        /* Style the email input field */
        .form-group label {
            font-size: 18px;
            font-weight: bold;
        }

        .form-con {
