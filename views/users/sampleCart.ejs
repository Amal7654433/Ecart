
<%- include("../partials/userHeader.ejs")%>
<!DOCTYPE html>
<html>
<head>
  <title>Cart</title>
</head>
<body>
  <h1>Your Shopping Cart</h1>

  <% if (cart.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(function(item) { %>
          <tr>
            <td><%= item.prod_id.name %></td>
           
            <td><%= item.qty %></td>
            
          </tr>
        <% }); %>
      </tbody>
    </table>

    
    <button class="checkout-btn">Checkout</button>
  <% } else { %>
    <p>Your cart is empty.</p>
  <% } %>
  
  <a href="/products">Back to Products</a>
</body>
</html>
