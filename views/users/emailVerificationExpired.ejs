<section>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <% if (expire) { %>
          <div class="alert alert-danger">
            The verification link has expired. Please login again.
            <a href="/login">click here to login</a>
          </div>
          <% } else { %>
            <div class="alert alert-success">
              Email verification has been successfull
              <a href="/home">Click here to go to the home page</a>
            </div>
            <% } %>
              <!-- You can provide a link to request a new verification link here -->
      </div>
    </div>
  </div>
</section>
