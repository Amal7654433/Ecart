            }

            .table tbody td {
                border-top: none;
                text-align: center;
                vertical-align: middle;
                font-size: 16px;
                padding: 20px;
            }

            /* Customize the edit and delete buttons */
            .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
                color: #fff;
                font-size: 16px;
                padding: 10px 20px;
            }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
                color: #fff;
            }

            .btn-red {
                background-color: #dc3545;
                border-color: #dc3545;
                color: #fff;
                font-size: 16px;
                padding: 10px 20px;
            }

            .btn-red:hover {
                background-color: #c82333;
                border-color: #bd2130;
                color: #fff;
            }

            /* Customize the modal */
            .modal-content {
                background-color: #fff;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            .modal-header {
                background-color: #f2f2f2;
                border-bottom: 2px solid #ddd;
                color: #333;
                font-weight: bold;
                text-align: center;
                vertical-align: middle;
